<% if flash[:errors] %>

  <% flash[:errors].each do |err| %>
    <div class="error-message">
      <%= err %>
    </div>
  <% end %>

<% elsif @game.guesses.empty? %>

  <div class="welcome-message">
    <span>
      Welcome to Hangman!
    </span>
  </div>

<% elsif @game.last_turn_correct? %>

  <div class="correct-message">
    <span>
      CORRECT
    </span>
  </div>

<% else %>

  <div class="incorrect-message">
    <span>
      INCORRECT
    </span>
  </div>

<% end %>

